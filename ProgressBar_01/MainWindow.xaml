<Window x:Class="ProgressBar_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgressBar_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <ProgressBar Value="30" Height="30" Margin="20" Width="500" Minimum="0" Maximum="100" 
                     IsIndeterminate="True"></ProgressBar>
        <ProgressBar Name="progressBar" Value="30" Height="30" Margin="20" Width="500" Minimum="0" Maximum="100" 
                     Foreground="BlueViolet"></ProgressBar>
        <Button Width="300" Padding="10" FontSize="20" Click="Button_Click">Start</Button>
        <Button Width="300" Margin="10" Padding="10" FontSize="20" Click="Button_Click_1">Stop</Button>
    </StackPanel>
</Window>
